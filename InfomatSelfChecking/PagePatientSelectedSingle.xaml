<Page x:Class="InfomatSelfChecking.PagePatientSelectedSingle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InfomatSelfChecking"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="PagePatientSelectedSingle"
      FontSize="40">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Проверкин Проверкин" TextAlignment="Center" VerticalAlignment="Bottom" Margin="20"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Text="Дата рождения: 01.01.1990" TextAlignment="Center" VerticalAlignment="Top" Margin="20"/>
        <Button Grid.Row="2" Grid.Column="0" Content="Неверно" Margin="20" x:Name="ButtonWrong" Click="ButtonWrong_Click"/>
        <Button Grid.Row="2" Grid.Column="2" Content="Продолжить" Margin="20" x:Name="ButtonContinue" Click="ButtonContinue_Click"/>
    </Grid>
</Page>
