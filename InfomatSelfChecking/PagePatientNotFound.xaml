<Page x:Class="InfomatSelfChecking.PagePatientNotFound"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InfomatSelfChecking"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="PagePatientNotFound"
      FontSize="40">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="К сожалению, по номеру +7 (910) 123-12-12&#x0a;не найдено записей на сегодня" TextAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0"/>
        <Image Grid.Row="1" Source="Media/PicNotFound.jpg" Margin="20"/>
        <TextBlock Grid.Row="2" Text="Возможно указан неверный номер, &#x0a;попробуйте снова или обратитесь на регистратуру" Margin="0,0,0,20" TextAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Row="3" Content="Закрыть" Margin="20" Click="Button_Click"/>
    </Grid>
</Page>
